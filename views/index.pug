extends layout

block content
  h1= title
  p Hello #{title} 
  button(type="button", class="btn btn-primary" onclick="goFaster()") Press Me
  br
  div#faster Increase the speed

  a(href="/Makeup") Makeup Search Results
    script.
      var mph = 20;
      var change = 1;

      function goFaster() {
        mph += change;
        change += 1;
        document.getElementById("faster").textContent = "MPH " + mph + " with change " + change;
      }
